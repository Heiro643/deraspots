<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity10">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ジブリパーク"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/blackBar"
        android:layout_width="350dp"
        android:layout_height="7dp"
        android:layout_marginTop="60dp"
        android:background="#070707"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView2" />

    <ImageView
        android:id="@+id/ghibliImage"
        android:layout_width="345dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:src="@drawable/ghibli"
        app:layout_constraintTop_toTopOf="@id/blackBar"
        app:layout_constraintEnd_toEndOf="@id/blackBar"
        app:layout_constraintStart_toStartOf="@id/blackBar"/>

    <LinearLayout
        android:id="@+id/blackBar2"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#070707"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ghibliImage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="345dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:text="　愛・地球博記念公園内に広がる、スタジオジブリ作品の世界を表現した公園。「ジブリの大倉庫」や新エリア「魔女の谷」など、映画のワンシーンに入り込んだような体験が魅力。森や風を感じながら物語の主人公気分に浸れる、愛知の新しいランドマークです。"
        app:layout_constraintEnd_toEndOf="@id/blackBar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/ghibliImage"
        app:layout_constraintTop_toBottomOf="@id/ghibliImage" />

    <LinearLayout
        android:id="@+id/blackBar3"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#070707"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@id/mapButton"/>

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F6D508"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:drawable/ic_dialog_map"
        app:layout_constraintStart_toStartOf="@id/blackBar"
        app:layout_constraintTop_toBottomOf="@id/textView3"/>

    <ImageButton
        android:id="@+id/officialButton"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/mapButton"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:srcCompat="@drawable/ghibli_logo"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="> Back"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/blackBar"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>