<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">
    <ImageView
        android:id="@+id/imagekurage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/okumono_kurage9" />
    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="名古屋港水族館"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/blackBar2"
        android:layout_width="350dp"
        android:layout_height="7dp"
        android:layout_marginTop="60dp"
        android:background="#070707"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView22" />

    <ImageView
        android:id="@+id/nagoyaImage"
        android:layout_width="345dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:src="@drawable/fish_photo"
        app:layout_constraintTop_toTopOf="@id/blackBar2"
        app:layout_constraintEnd_toEndOf="@id/blackBar2"
        app:layout_constraintStart_toStartOf="@id/blackBar2"/>

    <LinearLayout
        android:id="@+id/blackBar22"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#070707"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nagoyaImage" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="345dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:text="　日本最大級の水族館「名古屋港水族館」。イルカやシャチのショーが人気で、家族や友人など幅広い層におすすめのスポットです！\n　その季節だけのイベントもあるので，どのシーズンでも楽しめます！"
        app:layout_constraintEnd_toEndOf="@id/blackBar2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/nagoyaImage"
        app:layout_constraintTop_toBottomOf="@id/nagoyaImage" />

    <LinearLayout
        android:id="@+id/blackBar32"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#070707"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView32"
        app:layout_constraintBottom_toTopOf="@id/mapButton2"/>

    <ImageButton
        android:id="@+id/mapButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F6D508"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:drawable/ic_dialog_map"
        app:layout_constraintStart_toStartOf="@id/blackBar2"
        app:layout_constraintTop_toBottomOf="@id/textView32"/>

    <ImageButton
        android:id="@+id/officialButton2"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/mapButton2"
        app:layout_constraintTop_toBottomOf="@id/textView32"
        app:srcCompat="@drawable/parco_logo"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/backButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="> Back"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/blackBar2"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>