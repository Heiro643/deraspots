<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="レゴランド"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/blackBar"
        android:layout_width="350dp"
        android:layout_height="7dp"
        android:layout_marginTop="60dp"
        android:background="#070707"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView2" />

    <ImageView
        android:id="@+id/legoImage"
        android:layout_width="345dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:src="@drawable/lego"
        app:layout_constraintTop_toTopOf="@id/blackBar"
        app:layout_constraintEnd_toEndOf="@id/blackBar"
        app:layout_constraintStart_toStartOf="@id/blackBar"/>

    <LinearLayout
        android:id="@+id/blackBar2"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#070707"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/legoImage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="345dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:text="　小さなお子様にとっての「はじめて」の体験から、圧巻のスケールまで楽しめる、家族みんなのための一大ファミリーリゾート！パーク内には、テーマの異なる8つのエリアに、40を超えるアトラクションやショーが満載！"
        app:layout_constraintEnd_toEndOf="@id/blackBar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/legoImage"
        app:layout_constraintTop_toBottomOf="@id/legoImage" />

    <LinearLayout
        android:id="@+id/blackBar3"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#070707"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@id/mapButton"/>

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F6D508"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:drawable/ic_dialog_map"
        app:layout_constraintStart_toStartOf="@id/blackBar"
        app:layout_constraintTop_toBottomOf="@id/textView3"/>

    <ImageButton
        android:id="@+id/officialButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/mapButton"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:srcCompat="@drawable/lego_logo"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="> Back"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/blackBar"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>